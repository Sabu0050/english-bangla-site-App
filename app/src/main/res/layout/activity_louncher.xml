<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_louncher"
    android:background="#134b8e"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sabutos.english_bangla.LouncherActivity">

    <ImageView
        android:layout_width="196sp"
        android:layout_height="196sp"
        app:srcCompat="@drawable/englishbanglastartup"
        android:id="@+id/imageView"
        android:layout_marginTop="60sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ProgressBar
        style="?android:attr/progressBarStyle"
        android:progressDrawable="@drawable/circular_progress_bar"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:visibility="visible"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130sp" />
</RelativeLayout>
